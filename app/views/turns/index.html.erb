<section id="current-team-container">
  <% @turns.each do |turn| %>
    <div id="<%= turn.id %>" class="team-avatar-container row" data-team-id="<%= turn.team.id %>" data-round="<%= turn.round %>" data-turn="<%= turn.turn %>">
      <%= image_tag turn.team.logo, class: "team-logo small-1 column" %>
      <h2 class="team-name small-11 columns"><%= turn.team.name %></h2>
    </div>
  <% end %>
</section>

<section id="field">
  <div id="offence">
    <% @offence.each do |pos| %>
      <a href="#">
        <div id="<%= pos.name.downcase %>" data-id="<%= pos.id %>" class="position"><%= pos.name %></div>
      </a>
    <% end %>
  </div>
  <div id="defence">
    <% @defence.each do |pos| %>
      <a href="#">
        <div id="<%= pos.name.downcase %>" data-id="<%= pos.id %>" class="position"><%= pos.name %></div>
      </a>
    <% end %>
  </div>

</section>

<section id="left-section">
  <div id="logo">
    <h1 id="nfl-logo">NFL</h1>
    <h2 id="draft-logo">Draft</h2>
  </div>

  <div id="round-turn-container" class="row">
    <div class="round-container small-6 columns">
      <h1 id="round"></h1>
      <h3 class="title">Round</h3>
    </div>
    <div class="turn-container small-6 columns">
      <h1 id="turn"></h1>
      <h3 class="title">Turn</h3>
    </div>
  </div>

  <h2 id="last-moves-label">Last moves</h2>
  <div id="last-players-selected-container">
    <% if @last_added_players %>
    <ul id="players-teams-list">
      <% @last_added_players.each do |player| %>
      <li class="player-team-container row">
        <p class="last-added-players small-10 columns"><%= player.name %></p>
        <%= image_tag player.team.logo, class: "last-added-team small-2 columns" %>
      </li>
      <% end %>
    </ul>
    <% end %>
  </div>
</section>

<section id="players-list-container">
  <% @players.each do |player| %>

    <% if player.team %>
      <% deact = "deactivated" %>
      <% icon = "fi-x" %>
    <% else %>
      <% deact = "" %>
      <% icon = "fi-plus" %>
    <% end %>

    <a href="#">
      <div class="player-container row <%= deact %>" id="pcont-<%= player.id %>" data-player-id="<%= player.id %>">
        <h3 id="player-<%= player.id %>" class="<%= icon %> small-1 column"></h3>
        <h3 class="player-name small-11 columns"><%= player.name %></h3>
      </div>
    </a>
  <% end %>
</section>
